<h1>Edit task</h1>

<%= form_for(@task) do |t| %>
  <div class="form-group">
    <%= t.label :title %>
    <%= t.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= t.label :details %>
    <%= t.text_field :details, class: 'form-control' %>
  </div>

  <% if @task.completed == true %>
  <div class="form-check">
    <input class="form-check-input" type="checkbox" value="" checked id="defaultCheck1">
    <label class="form-check-label" for="defaultCheck1">
      <%= "This task is completed" %>
    </label>
  </div>
<% else %>
  <div class="form-check">
    <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
    <label class="form-check-label" for="defaultCheck1">
      <%= "Completed" %>
    </label>
  </div>
<% end %>

  <%= t.submit class: 'btn btn-primary' %>
<% end %>

<%= link_to "Back to list", tasks_path %>
